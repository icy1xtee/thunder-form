{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    // not sure about esModuleInterop yet
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
